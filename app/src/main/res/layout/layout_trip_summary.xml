<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_trip_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:visibility="gone"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_trip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Summary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#222222"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Address: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#444444"/>

            <TextView
                android:id="@+id/txt_start_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main St"
                android:textSize="16sp"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Address: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#444444"/>

            <TextView
                android:id="@+id/txt_end_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GLA University"
                android:textSize="16sp"
                android:textColor="#444444"
                android:paddingBottom="10dp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_trip_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration: 12 min"
                android:textSize="16sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txt_trip_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distance: 4.5 km"
                android:textSize="16sp"
                android:textColor="#555555"
                android:gravity="end"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_trip_charges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charges: â‚¹45.00"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E88E5"
            android:gravity="end"
            android:paddingTop="14dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@color/colorAccent"
            android:text="@string/okay"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
